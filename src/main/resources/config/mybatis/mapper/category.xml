<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="category">

	<!-- 카테고리 id로 이름찾기 -->
	<select id="select_name" parameterType="int" resultType="String">
		select
		name from category where category_id = #{category_id}
	</select>

	<!-- 부모에 해당하는 자식 -->
	<select id="getChildByParentId" resultType="vo.CategoryVO"> select * from
		category where parent_category_id = #{parent_id}
	</select>

	<select id="getParentList" resultType="vo.CategoryVO"> select * from category
		where parent_category_id IS NULL
	</select>

	<select id="selectListAll" resultType="vo.CategoryVO">
		select * from category 
	</select>

</mapper>












